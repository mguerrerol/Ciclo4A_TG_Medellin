<!doctype html>
<html lang="es">
  <head>
  <link rel="shortcut icon" href="IMG/favicon.png" type="image/x-icon" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
	<link rel="stylesheet" href="CSS/style.css">
	<title>Tienda La Generica - Medellin</title>
  <style>
    .container{
      max-width: 1050px;
    }
  </style>
</head>
  <body>
    <div>
      <img src="/IMG/header.png"class="img-fluid" alt="Tienda La Generica - Medellin">
    </div>

    <ul class="nav flex-column">
      <li class="nav-item">
        <form action="/productos" method="GET">
          <input class="btnProductos" type="submit" name="btnProductos" id="btnProductos" value="btnProductos">
        </form>
        </li>
      <li class="nav-item">
        <form action="/clientes" method="GET">
          <input class="btnClientes" type="submit" name="btnClientes" id="btnClientes" value="btnClientes">
        </form>
      </li>
      <li class="nav-item">
        <form action="/ventas" method="GET">
          <input class="btnVentas" type="submit" name="btnVentas" id="btnVentas" value="btnVentas">
        </form>
      </li>
      <li class="nav-item">
        <form action="/reportes" method="GET">
          <input class="btnReportes" type="submit" name="btnReportes" id="btnReportes" value="btnReportes">
       </form>
      </li>
      <li class="nav-item">
        <form action="/login" method="GET">
          <input class="btnSalir" type="submit" name="btnSalir" id="btnSalir" value="btnSalir">
        </form>
      </li>
    </ul>
    
    <div class="container">
      <figure class="text-center">
        <blockquote class="blockquote">
          <h1>Ventas</h1>
        </blockquote>
      </figure>

      <div id="body">	
       
        <form id="form_datos" action="/ventas" method="POST">

          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>
                  <h5><label class="form-label" for="txtcedula_cliente_ventas">Cedula Cliente</label></h5>
                </td>
                <td>
                  <input class="form-control" type="number" name="txtcedula_cliente_ventas" id="txtcedula_cliente_ventas" maxlength="50" value="<%=txtCedula%>" min="1" pattern="[0-9]+" required>
                </td>
                <td>
                  <button type="submit" class="w-100 btn btn-crear btn-lg"><i class="bi bi-binoculars"></i> Consultar Cliente</button>
                </td>
              </tr>

              <tr>
                <td>
                  <h5><label class="form-label" for="txtcodigo_producto_detalle_ventas">Codigo Producto</label></h5>
                </td>
                <td>
                  <input class="form-control" type="number" name="txtcodigo_producto_detalle_ventas" id="txtcodigo_producto_detalle_ventas"	maxlength="50" >
                </td>
                <td>
                  <a href='/ventas/nuevaventa' onclick="return confirm('¿Esta seguro de desea iniciar una nueva venta?');" class=" w-100 btn btn-crear btn-lg  bi bi-cart4"> Nueva Venta</a>
                </td>
              </tr>

              <tr>
                <td>
                  <h5><label class="form-label" for="txtcantidad_producto_detalle_ventas">Cantidad de Producto</label></h5>
                </td>
                <td>
                  <input class="form-control" type="number" name="txtcantidad_producto_detalle_ventas" id="txtcantidad_producto_detalle_ventas" maxlength="20" min="1" pattern="[0-9]+" required>
                </td>
                <td>
                  <button type="submit" class="w-100 btn btn-crear btn-lg"><i class="bi bi-cart-plus"></i> Registrar Producto</button>
                </td>
              </tr>
            </tbody>
          </table>
        </form>
       
        <form id="form_factura" action="/factura" method="post">
          <input type="hidden" name="txtcedula"  id="txtcedula" value="<%=txtCedula%>"> 
          <div class="progress" style="height: 5px;">
            <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>
                  <h5><label class="form-label">Cedula</label></h5>
                  
                </td>
                <td>
                  <h5><label class="form-label"><%=txtCedula%></label></h5>
                  <!-- <input class="form-control" type="number" name="txtCedula_factura" id="txtcedula_factura" maxlength="50" value="<%=txtCedula%>" disabled> -->
                </td>
                <td>
                  <h5><label class="form-label"><%=txtNombreCliente%></label></h5>
                  <!-- <input class="form-control" type="text" name="txtNombre_factura" id="txtnombrefactura" maxlength="50" value="<%=txtNombreCliente%>"disabled> -->
                </td>
                <td>
                  <h5><label class="form-label" for="txtcantidad_producto_detalle_ventas">Factura numero</label></h5>
                </td>
                <td>
                  <h5><label class="form-label" for="txtcantidad_producto_detalle_ventas" id="txtConsecutivo" name="txtConsecutivo" value="<%=txtConsecutivo%>"><%=txtConsecutivo%></label></h5> 
                </td>
                <tr >
                  <td colspan="4">
                    <h5>
                      <%  fecha = new Date();
                          options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour:'numeric', minute: 'numeric',
                                      second:'numeric'};%>
                      <%= fecha.toLocaleDateString("es-CO",options) %>
                    </h5>
                  </td>
                </tr>
              </tr>
            </tbody>
          </table>
       
       
          <div class="progress" style="height: 5px;">
            <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
 
          <div>
            <table id="tablaVentas" class="display" style="text-align: center;">
              <thead>
                <tr>
                  <th>Codigo Producto</th>
                  <th>Nombre del Producto</th>
                  <th>Cantidad de Producto</th>
                  <th>Valor del producto</th>
                  <th>Total sin IVA</th>
                  <th>Valor del IVA</th>
                  <th>Total con IVA</th>
                </tr>
              </thead>
              <tbody>
                <%detalles.forEach((detalle) => {%>  
                  <tr>
                    <input type="hidden" name="_id"  id="_id" value="<%=detalle._id%>">
                    <th><%=detalle.codigo_producto_detalle_ventas%></th>
                    <td><%=detalle.nombre_producto_detalle_ventas%></td>
                    <td><%=detalle.cantidad_producto_detalle_ventas%></td>
                    <td>$ <%=detalle.valor_producto_detalle_ventas%></td>
                    <td>$ <%=detalle.valor_venta_detalle_ventas%></td>
                    <td>$ <%=detalle.valoriva_detalle_ventas%></td>
                    <td>$ <%=detalle.valor_total_detalle_ventas%></td>
                    <td>
                      <a href="/ventas/eliminar/<%=detalle._id%>" onclick="return confirm('¿Esta seguro de querer eliminar el producto?');" class="btn btn-outline-danger bi bi-cart-x"></a>
                      
                    </td>
                  </tr>
                  <% })%>        
              </tbody>
            </table>
            <table>
              <tbody>
                <div class="progress" style="height: 5px;">
                  <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <tr>
                  <td>
                    <h5><label class="form-label">Total Venta sin IVA   </label></h5> 
                  </td>
                  <td>
                    <h5><label class="form-label">$ <%=totalparcial%></label></h5> 
                  </td>
                </tr>
                <tr>
                  <td>
                    <h5><label class="form-label">Total Valor IVA   </label></h5> 
                  </td>
                  <td>
                    <h5><label class="form-label">$ <%=totaliva%></label></h5> 
                  </td>
                </tr>
                <tr>
                  <td>
                    <h5><label class="form-label">Total Venta con IVA   </label></h5> 
                  </td>
                  <td>
                    <h5><label class="form-label">$ <%=totalfinal%></label></h5> 
                  </td>
                </tr>
              </tbody>
            </table>
            <button type="submit" class="w-100 btn btn-crear btn-lg" onclick="confirmar(<%=totalfinal%>)"><i class="bi bi-cart-check-fill"></i> Registrar Venta</button>
            <div class="progress" style="height: 5px;">
              <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </form>
        </div>
      </div> 
     </body>
    <script type="text/javascript">document.oncontextmenu = function(){return false;}</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="js/codeventas.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.10/dist/sweetalert2.all.min.js"></script>
   
    </script> 
    <script >
      $(document).ready(function() {
      $('#tablaVentas').DataTable({
          "language": {
            "decimal": ",",
            "thousands": ".",
            "lengthMenu": "Muestra _MENU_ registros por pagina",
            "zeroRecords": "No se han registrado aun productos",
            "info": "Mostrando Pagina _PAGE_ de _PAGES_",
            "infoEmpty": "No hay registros en la tabla",
            "infoFiltered": "(Filtrado de _MAX_ registros totales)",
            "search": "Buscar: ",
            "paginate": {
            "next": "Siguiente Pagina",
            "previous": "Pagina Anterior"
          }
        }
      });
    });
    </script>
  
  </body>
</html>
